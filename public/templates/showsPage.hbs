<h2>Your Shows</h2>

<a id="showCreateForm" href="#" role="button" class="btn btn-large btn-primary">Add A Show</a>

<section id="showsCollection"></section>

<div id="show-modal" class="modal hide fade">
  <div class="modal-header">
    <h3>Add A Show</h3>
  </div>

  <div class="modal-body">
    <div class="control-group">
      <label class="control-label" for="inputShowName">Name</label>
      <div class="controls">
        <input type="text" id="inputShowName" placeholder="Name of Show">
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="startDate">Start Date</label>
      <div class="controls">
        <div class="input-append date" id="startDate" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
          <input id="inputStartDate" class="span2" size="16" type="text" value="12-02-2012" readonly>
          <span class="add-on"><i class="icon-calendar"></i></span>
        </div>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="startTime">Start Time</label>
      <div class="controls">
        <div class="input-append bootstrap-timepicker-component">
          <input id="startTime" type="text" class="timepicker-default input-small">
          <span class="add-on">
              <i class="icon-time"></i>
          </span>
        </div>
      </div>  
    </div> 

    <div class="control-group">
      <label class="control-label" for="duration">Duration (min)</label>
      <div class="controls">
       <input id="inputDurationMin" type="number" min="30" max="120" step="15"/>
      </div>  
    </div> 
  </div>

  <div class="modal-footer">
    <a id="cancelCreate" href="#" class="btn" data-toggle="modal">Close</a>
    <a id="saveShow" href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>
